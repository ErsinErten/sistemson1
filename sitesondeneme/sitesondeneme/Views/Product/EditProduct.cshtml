@model sitesondeneme.Models.Product

@{
    ViewData["Title"] = "Ürün Düzenle";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Ürün Düzenle</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background: radial-gradient(#fff, #ffd6d6);
            padding: 40px;
            font-family: 'Segoe UI', sans-serif;
        }

        .form-container {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            max-width: 600px;
            margin: auto;
        }

        h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #333;
        }

        .form-group label {
            font-weight: 600;
        }

        .btn-success {
            width: 100%;
            padding: 10px;
            font-size: 16px;
        }

        .text-danger {
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Ürün Düzenle</h2>

        <form asp-action="EditProduct" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name">Ürün Adı:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price">Fiyat (₺):</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category">Kategori:</label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="MainImage">Yeni Ana Görsel (değiştirmek istersen):</label>
                <input type="file" name="MainImage" class="form-control-file" />
            </div>

            <div class="form-group">
                <label asp-for="Description">Ürün Açıklaması:</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Güncelle</button>
        </form>
    </div>
</body>
</html>
